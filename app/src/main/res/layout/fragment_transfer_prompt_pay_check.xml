<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransferPromptPayCheckFragment"
    android:id="@+id/TransferPromptPayCheckFragment"
    android:clickable="true"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            android:text="Check before confirm transfer"
            android:textSize="@dimen/header"
            android:textStyle="bold"
            android:gravity="center|top"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myAccountTxt"
            android:text="FROM: "
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/header"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/myAccountValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/myAccountTxt"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/myAccountTxt"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:ems="10"
            android:text="myAccountValue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desAccountTxt"
            android:text="TO: "
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/myAccountTxt"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/desAccountValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/desAccountTxt"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/desAccountTxt"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:ems="10"
            android:text="Destination Account" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desAccountNameTxt"
            android:text="Account Name: "
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/desAccountTxt"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/desAccountNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/desAccountNameTxt"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/desAccountNameTxt"
            android:ems="10"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:text="account name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amountTxt"
            android:text="Amount: "
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/desAccountNameTxt"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/amountValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/amountTxt"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/amountTxt"
            android:ems="10"
            android:paddingRight="20dp"
            android:paddingTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirmBtn"
            android:layout_below="@+id/amountTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Confirm"/>

    </RelativeLayout>

</FrameLayout>